// cities

model City {
    id       Int    @id @default(autoincrement())
    name     String @unique
    tineZona String

    statusId Int    @default(1)
    status   Status @relation(fields: [statusId], references: [id])

    users     User[]     @relation("UserRoles")
    teams     Team[]
    games     Game[]
    questions Question[]

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    @@map("cities")
}
