// reservation

model Reservation {
    id     Int    @id @default(autoincrement())
    phone  String
    chatId BigInt
    nickname String?

    gameId Int
    game   Game @relation(fields: [gameId], references: [id])

    status Boolean @default(false)

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    @@map("reservations")
}
